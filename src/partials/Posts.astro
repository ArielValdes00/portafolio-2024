---
import Card from "../components/Card.astro";
import { posts } from "../utils/data.astro";

const postsCopy = [...posts].reverse();
---

<section class="grid grid-cols-1 gap-3 md:grid-cols-3 py-6 px-3">
  {
    postsCopy.slice(0, 3).map((post) => (
      <Card
        title={post.title}
        image={post.image}
        body={post.body}
        date={post.date}
        href={`/posts/${post.slug}`}
      />
    ))
  }
</section>
